<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/route_content_overview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:gravity="center_horizontal"
    android:layout_centerVertical="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statusbar_title_box"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="start|bottom"
        android:paddingTop="5dp"
        android:layout_marginRight="10dp">
        <TextView
            android:id="@+id/statusbar_title_box_title"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFEE"
            android:textSize="14sp"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Bollenstreek" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppTheme.ButtonBar.Fullscreen"
        android:orientation="vertical"
        android:gravity="center_horizontal">

    <LinearLayout
        android:id="@+id/statusbar_praxfit_movieparts"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:visibility="gone">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/statusbar_praxfit_recyclerview_movieparts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_gravity="center"
            android:orientation="horizontal"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/statusbar_information_display_blocks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/statusbar_time_box"
            android:background="@drawable/imagebutton_blue_border"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/statusbar_title_box_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/statusbar_time_title" />
            <Chronometer
                android:id="@+id/statusbar_time_box_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusbar_speed_box"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/imagebutton_blue_border"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/statusbar_speed_box_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/statusbar_rpm_title" />
            <TextView
                android:id="@+id/statusbar_speed_box_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE"
                android:textSize="20sp"
                android:text="60" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusbar_distance_box"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/imagebutton_blue_border"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/statusbar_distance_box_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/statusbar_distance_title" />
            <TextView
                android:id="@+id/statusbar_distance_box_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE"
                android:textSize="16sp"
                android:text="16384" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusbar_distance_finish_box"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/imagebutton_blue_border"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <TextView
                android:id="@+id/statusbar_distance_finish_box_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="@string/statusbar_finish_distance_title" />
            <TextView
                android:id="@+id/statusbar_distance_finish_box_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#FFFFEE"
                android:textSize="16sp"
                android:text="46384" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/statusbar_switch_part_box"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/imagebutton_blue_border"
            android:orientation="vertical"
            android:gravity="center_horizontal">
            <ImageButton
                android:id="@+id/statusbar_switch_part_button"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@null"
                android:src="@drawable/routeparts_button"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/statusbar_praxfit_volume_buttons_layout"
            android:background="@drawable/imagebutton_blue_border"
            android:layout_width="95dp"
            android:layout_height="90dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:orientation="vertical"
            android:gravity="center">

            <ImageButton
                android:id="@+id/statusbar_praxfit_volume_button_up"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:src="@drawable/plus_small"/>
            <TextView
                android:id="@+id/statusbar_praxfit_volume_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:text="@string/statusbar_volume_title"
                android:layout_margin="3dp"
                android:textStyle="bold"
                android:textSize="12sp" />
            <ImageButton
                android:id="@+id/statusbar_praxfit_volume_button_down"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@null"
                android:src="@drawable/minus_small"/>
        </LinearLayout>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/statusbar_praxfit_progress_indicator"
                android:layout_width="700dp"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/praxfilm_progress_drawable"
                android:thumb="@drawable/bicycle_thumb_praxfilm"
                android:splitTrack="false"
                />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>