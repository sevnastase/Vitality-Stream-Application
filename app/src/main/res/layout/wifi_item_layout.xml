<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/network_header_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/connected_network_strength_imageview"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:contentDescription="network strength"
            android:src="@drawable/wifi_strength_0_black"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/network_name_textview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
            android:id="@+id/network_name_textview"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="network name"
            android:textColor="@color/black"
            android:ellipsize="end"
            android:singleLine="true"
            app:layout_constraintLeft_toRightOf="@id/connected_network_strength_imageview"
            app:layout_constraintRight_toLeftOf="@id/show_enter_credentials_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <ImageButton
            android:id="@+id/show_enter_credentials_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/closed_list_symbol_black"
            app:layout_constraintLeft_toRightOf="@id/network_name_textview"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/wifi_credentials_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone">

        <TextView
            android:id="@+id/enter_password_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter password: "
            android:textSize="14sp"
            android:textColor="@color/exo_white"
            android:paddingLeft="50dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/wifi_password_input"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">
        </TextView>

        <EditText
            android:id="@+id/wifi_password_input"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:ems="10"
            android:singleLine="true"
            android:hint="@string/prompt_password"
            android:imeOptions="actionDone"
            android:background="@null"
            android:backgroundTint="@android:color/holo_red_dark"
            android:textColor="@color/exo_white"
            app:layout_constraintLeft_toRightOf="@id/enter_password_textview"
            app:layout_constraintRight_toLeftOf="@id/connect_to_network_button"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <Button
            android:id="@+id/connect_to_network_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Connect"
            android:background="@null"
            android:textColor="@color/black"
            app:layout_constraintLeft_toRightOf="@id/wifi_password_input"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <ProgressBar
            android:id="@+id/connecting_loading_wheel"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="gone"
            app:layout_constraintLeft_toRightOf="@id/wifi_password_input"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>