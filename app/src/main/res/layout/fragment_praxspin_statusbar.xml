<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/Widget.AppTheme.ButtonBar.Fullscreen"
    android:id="@+id/route_content_overview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:gravity="center_horizontal"
    android:layout_centerVertical="true"
    android:orientation="vertical" >

    <!-- Layout for everything   -->
    <LinearLayout
        android:id="@+id/statusbar_praxfit_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <!--  Layout for labels and routeparts    -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:id="@+id/route_content_informationlabels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="5dp">

                <TextView
                    android:id="@+id/statusbar_praxspin_movie_title"
                    android:text="Movie Title"
                    android:textColor="#FFFFEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="15dp"
                    android:paddingLeft="30dp" />

                <Chronometer
                    android:id="@+id/statusbar_praxspin_stopwatch_current_ride"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#FFFFEE"
                    android:paddingRight="15dp"/>

                <TextView
                    android:id="@+id/statusbar_praxspin_movie_distance"
                    android:text="@string/video_screen_distance"
                    android:textColor="#FFFFEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="15dp"/>
                <TextView
                    android:id="@+id/statusbar_praxspin_movie_total_distance"
                    android:text="@string/video_screen_total_distance"
                    android:textColor="#FFFFEE"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingRight="15dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/route_layout_content_movieparts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_centerHorizontal="true">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/statusbar_praxspin_recyclerview_movieparts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal" />
            </LinearLayout>
        </LinearLayout>

        <!--     Speed buttons   -->
            <LinearLayout
                android:id="@+id/statusbar_praxspin_speed_buttons_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">
                <TextView
                android:id="@+id/statusbar_praxspin_speed_indicator"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/white"
                android:textSize="24sp" />
                <ImageButton
                    android:id="@+id/statusbar_praxspin_speed_button_up"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:background="@null"
                    android:src="@drawable/plus_small"/>
                <ImageButton
                    android:id="@+id/statusbar_praxspin_speed_button_down"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@null"
                    android:src="@drawable/minus_small"/>
            </LinearLayout>

    </LinearLayout>


</RelativeLayout>