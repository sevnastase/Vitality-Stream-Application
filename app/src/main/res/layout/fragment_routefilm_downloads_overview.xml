<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/routefilms_downloads_overview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Downloads" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="14sp"
            android:text="Download overview of the new routefilms." />
        <View
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_routefilm_downloads"
            android:layout_width="wrap_content"
            android:layout_height="400dp"
            android:layout_gravity="center"
            android:scrollIndicators="none"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scrollbar_shape"
            />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>