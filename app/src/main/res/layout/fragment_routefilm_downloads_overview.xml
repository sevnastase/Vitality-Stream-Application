<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/downloads_overview"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:id="@+id/routefilms_downloads_overview_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/downloads_fragment_title" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="14sp"
            android:text="@string/downloads_fragment_subtitle" />
        <View
            android:layout_width="15dp"
            android:layout_height="15dp" />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerview_routefilm_downloads"
            android:layout_width="wrap_content"
            android:layout_height="450dp"
            android:layout_gravity="center"
            android:scrollIndicators="none"
            android:scrollbars="vertical"
            android:scrollbarThumbVertical="@drawable/scrollbar_shape"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/general_overlay_download_information"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/downloads_overview"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="5"
        android:layout_gravity="center|center_horizontal"
        android:background="@drawable/imagebutton_blue_border"
        android:backgroundTint="@color/black_overlay"
        android:orientation="vertical"
        android:textAlignment="center"
        android:gravity="center"
        android:padding="8dp"
        android:layout_marginRight="8dp">
        <TextView
            android:id="@+id/general_overlay_download_speed_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/download_information_overlay_main_title" />
        <TextView
            android:id="@+id/general_overlay_download_speed_information_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="14sp" />
        <TextView
            android:id="@+id/general_overlay_download_information_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/download_information_overlay_error_title"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/general_overlay_download_information_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/exo_white"
            android:textSize="14sp"
            android:visibility="invisible"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>