<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/route_content_overview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="bottom|center_horizontal"
    android:gravity="center_horizontal"
    android:layout_centerVertical="true"
    android:orientation="vertical" >

    <LinearLayout
        style="@style/Widget.AppTheme.ButtonBar.Fullscreen"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/motolife_stats_container_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/chinesport_film_speed_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chinesport_film_speed_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Speed"
                    android:textColor="#FFFFEE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chinesport_film_speed_box_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="100"
                    android:textColor="#FFFFEE"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chinesport_film_power_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chinesport_film_power_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Power"
                    android:textColor="#FFFFEE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/chinesport_film_power_box_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="100"
                    android:textColor="#FFFFEE"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chinesport_film_mode_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chinesport_film_mode_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Mode"
                    android:textColor="#FFFFEE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusbar_motolife_mode_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Leg"
                    android:textColor="#FFFFEE"
                    android:textSize="16sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/chinesport_film_direction_box"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/chinesport_film_direction_box_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Direction"
                    android:textColor="#FFFFEE"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/statusbar_motolife_direction_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:text="Forward"
                    android:textColor="#FFFFEE"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/statusbar_title_box_layout"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical"
        android:gravity="start|bottom"
        android:paddingTop="5dp"
        android:layout_marginRight="10dp">

        <TextView
            android:id="@+id/statusbar_title_box_textview"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:textColor="#FFFFEE"
            android:textSize="14sp"
            android:focusable="false"
            android:textStyle="bold"
            android:layout_marginLeft="3dp"
            android:layout_marginBottom="15dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="Bollenstreek" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@style/Widget.AppTheme.ButtonBar.Fullscreen"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <LinearLayout
            android:id="@+id/statusbar_routeparts_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_centerHorizontal="true"
            android:visibility="gone">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/statusbar_routeparts_recyclerview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center"
                android:orientation="horizontal"/>
        </LinearLayout>

        <!--  Layout for labels and routeparts    -->
        <LinearLayout
            android:layout_width="match_parent"
            style="@style/Widget.AppTheme.ButtonBar.Fullscreen"
            android:layout_alignParentBottom="true"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <LinearLayout
                android:id="@+id/statusbar_buttons_dashboard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/motolife_toggle_layout"
                    android:layout_width="100dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/imagebutton_red_border"
                    android:orientation="vertical"
                    android:gravity="center">
                    <Button
                        android:id="@+id/motolife_toggle_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFEE"
                        android:focusable="false"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:text="Toggle"
                        android:padding="8dp"
                        android:background="@null"
                        android:nextFocusLeft="@id/statusbar_stop_button"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/statusbar_time_box"
                    android:background="@drawable/imagebutton_blue_border"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/statusbar_time_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFEE"
                        android:focusable="false"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@string/statusbar_time_title" />
                    <TextView
                        android:id="@+id/statusbar_motolife_time_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFEE"
                        android:focusable="false"
                        android:text="00:00/00:00"/>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/statusbar_rpm_box"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:background="@drawable/imagebutton_blue_border"
                    android:orientation="vertical"
                    android:gravity="center_horizontal">
                    <TextView
                        android:id="@+id/statusbar_rpm_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFEE"
                        android:focusable="false"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:text="@string/statusbar_rpm_title" />
                    <TextView
                        android:id="@+id/statusbar_rpm_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FFFFEE"
                        android:focusable="false"
                        android:textSize="20sp"
                        android:text="60" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/statusbar_volume_buttons_box"
                    android:background="@drawable/imagebutton_blue_border"
                    android:layout_width="95dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageButton
                        android:id="@+id/statusbar_volume_up_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:src="@drawable/plus_small"
                        android:nextFocusRight="@id/statusbar_volume_down_button"/>
                    <TextView
                        android:id="@+id/statusbar_volume_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:focusable="false"
                        android:textColor="@android:color/white"
                        android:text="@string/statusbar_volume_title"
                        android:layout_margin="3dp"
                        android:textStyle="bold"
                        android:textSize="12sp" />
                    <ImageButton
                        android:id="@+id/statusbar_volume_down_button"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:background="@null"
                        android:src="@drawable/minus_small"
                        android:nextFocusLeft="@id/statusbar_volume_up_button"/>
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_centerHorizontal="true">

                <!--  Seekbar for future outlining with progressbar  -->
                <SeekBar
                    android:id="@+id/statusbar_praxfilm_digital_twin_seekbar_movie"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:focusable="false"
                    android:layout_marginTop="50dp"
                    android:layout_marginBottom="20dp"
                    android:progressDrawable="@android:color/holo_blue_light"
                    android:thumb="@android:color/holo_blue_dark"
                    android:thumbOffset="0dp"
                    android:splitTrack="false"
                    android:visibility="gone"/>

                <SeekBar
                    android:id="@+id/statusbar_seekbar"
                    android:layout_width="700dp"
                    android:focusable="false"
                    android:layout_height="wrap_content"
                    android:progressDrawable="@drawable/praxfilm_progress_drawable"
                    android:thumb="@drawable/bicycle_thumb_praxfilm"
                    android:thumbOffset="0dp"
                    android:splitTrack="false" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>