<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="15dp"
    app:cardBackgroundColor="@android:color/transparent">

    <FrameLayout
        android:id="@+id/routefilm_cover_photo_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/routefilm_cover_photo_imagebutton"
            android:src="@drawable/scenery_placeholder"
            android:layout_width="@dimen/default_routefilm_card_width"
            android:layout_height="@dimen/default_routefilm_card_height"
            android:layout_marginHorizontal="5dp"
            android:layout_marginVertical="10dp"
            android:background="@null" />

        <ImageButton
            android:id="@+id/favorite_button"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_margin="20dp"
            android:layout_gravity="top|right"
            android:scaleType="fitCenter"
            android:background="@null"
            android:src="@drawable/empty_star_favorite"
            android:visibility="visible" />

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>