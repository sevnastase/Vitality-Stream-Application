<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/download_sound_status_title"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold"
        android:text="@string/downloading_sound_files"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/download_sound_status_summary"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:text="@string/mr_cast_dialog_title_view_placeholder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <SeekBar
        android:id="@+id/download_sound_status_progressbar"
        android:layout_width="200dp"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/praxfilm_progress_drawable"
        android:thumb="@drawable/bicycle_thumb_praxfilm"
        android:thumbOffset="0dp"
        android:splitTrack="false"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/login_goto_synchronisation_view_button"
        android:text="@string/profile_add_form_next_button_text"
        style="@style/AppTheme.DefaultButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_marginTop="15dp"
        android:focusable="true"
        android:visibility="invisible"/>
</LinearLayout>