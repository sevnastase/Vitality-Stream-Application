<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:background="@drawable/imagebutton_blue_border"
    android:backgroundTint="@color/blue_grey_light_overlay">

    <ImageView
        android:id="@+id/single_ble_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:src="@drawable/bike_sensor_icon_small" />

    <TextView
        android:id="@+id/single_ble_device_name"
        android:textColor="@color/exo_white"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/single_ble_device_connection_strength"
        android:textColor="@color/exo_white"
        android:layout_width="wrap_content"
        android:layout_margin="10dp"
        android:layout_height="wrap_content"/>

</LinearLayout>